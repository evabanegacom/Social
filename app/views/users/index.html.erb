<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
            <% if current_user.following?(user)%>
               <%= link_to 'unfollow',  friendship_path(user.id), method: :delete, class: 'profile-link' %>
            <% else %>
                <%= link_to 'follow',  friendships_path(user_id: user.id), method: :post, class: 'profile-link' %>
            <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
